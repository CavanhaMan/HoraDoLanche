            <TextView
                android:id="@+id/descr7"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="13"
                android:text="Pastelão de presunto e queijo" />

            <!-- **************** MENU 8 (14 15)********************* -->
            <ImageView
                android:id="@+id/lanche8"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="14"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lanchesanduba" />

            <TextView
                android:id="@+id/menu8"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="14"
                android:text="Sanduiche" />

            <TextView
                android:id="@+id/descr8"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="15"
                android:text="Sanduiche no pão preto" />

            <!-- **************** MENU 9 (16 17)********************* -->
            <ImageView
                android:id="@+id/lanche9"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="16"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lanchetorta" />

            <TextView
                android:id="@+id/menu9"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="16"
                android:text="Torta" />

            <TextView
                android:id="@+id/descr9"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="17"
                android:text="Torta de Frango" />

        </GridLayout>
    </ScrollView>
</GridLayout>