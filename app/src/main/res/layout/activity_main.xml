<?xml version="1.0" encoding="utf-8"?>
<!-- Rodrigo & Keilane -->
<!-- CRIA UM GRID COM 2 ELEMENTOS - O TITULO E A LISTA -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3">

    <!--
        classe lanche com nome descrição e preço
        botão atualizar que irá atualizar a hora
        e atualizar os lanches que estão disponíveis no momento
    -->

    <!-- CRIA O TÍTULO -->
    <ImageView
        android:id="@+id/cavanhas"
        android:layout_width="324dp"
        android:layout_height="124dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="#ffe6cc"
        android:contentDescription="@drawable/horadolanche"
        android:src="@drawable/horadolanche" />

    <Button
        android:id="@+id/bthora"
        style="@style/Hora"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_column="1"
        android:layout_row="0"
        android:text="18:35" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text=""
        android:background="#ffe6cc" />



    <!-- CRIA A ROLAGEM PARA A LISTA -->
    <ScrollView
        android:id="@+id/rolapizzas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2">

        <!-- CRIA A LISTA -->
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listapizzas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="30">

            <!-- **************** MENU 1 (0 1)********************* -->
            <ImageView
                android:id="@+id/lanche1"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:background="#ffe6cc"
                android:src="@drawable/lanchecochinha" />

            <TextView
                android:id="@+id/menu1"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Coxinha" />

            <TextView
                android:id="@+id/descr1"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Cochinha de frango" />

            <!-- **************** MENU 2 (2 3)********************* -->
            <ImageView
                android:id="@+id/lanche2"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lancheempada" />

            <TextView
                android:id="@+id/menu2"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Empada" />

            <TextView
                android:id="@+id/descr2"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="Empada de Frango" />

            <!-- **************** MENU 3 (4 5)********************* -->
            <ImageView
                android:id="@+id/lanche3"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lancheenroladinho" />

            <TextView
                android:id="@+id/menu3"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="Enroladinho" />

            <TextView
                android:id="@+id/descr3"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:text="Enroladinho de salsicha empanada" />

            <!-- **************** MENU 4 (6 7)********************* -->
            <ImageView
                android:id="@+id/lanche4"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lancheespetinho" />

            <TextView
                android:id="@+id/menu4"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:text="Espetinho" />

            <TextView
                android:id="@+id/descr4"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:text="Espetinho de frango empanado" />

            <!-- **************** MENU 1 (8 9)********************* -->
            <ImageView
                android:id="@+id/lanche5"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="8"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lanchemaia" />

            <TextView
                android:id="@+id/menu5"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="8"
                android:text="Maia" />

            <TextView
                android:id="@+id/descr5"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="9"
                android:text="Maia de carne" />

            <!-- **************** MENU 6 (10 11)********************* -->
            <ImageView
                android:id="@+id/lanche6"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="10"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lanchepastel" />

            <TextView
                android:id="@+id/menu6"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="10"
                android:text="Pastel" />

            <TextView
                android:id="@+id/descr6"
                style="@style/TextoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="11"
                android:text="Pastel mixto - carne e queijo" />

            <!-- **************** MENU 7 (12 13)********************* -->
            <ImageView
                android:id="@+id/lanche7"
                style="@style/Botao"
                android:layout_width="116dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="12"
                android:layout_rowSpan="2"
                android:background="#ffe6cc"
                android:src="@drawable/lanchepastelao" />

            <TextView
                android:id="@+id/menu7"
                style="@style/TextoTitulo"
                android:layout_width="match_parent"
